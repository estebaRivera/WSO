<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/white"
    android:clipChildren="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="2dp">

        <ImageView
            android:id="@+id/share_image_full"
            android:scaleType="centerCrop"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/share_split_image_container"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="0dp">

            <ImageView
                android:id="@+id/share_image_left"
                android:scaleType="centerCrop"
                android:background="#ff6a6a6a"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                />

            <ImageView
                android:id="@+id/share_image_right"
                android:scaleType="centerCrop"
                android:background="#ff6a6a6a"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                />

        </LinearLayout>

        <TextView
            android:visibility="gone"
            android:id="@+id/share_vs_label"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/livecell_vs_label"
            android:layout_width="56dp"
            android:layout_height="31dp"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:text="@string/livecell_vs_label"
            />

        <RelativeLayout
            android:id="@+id/share_main_layout"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:background="#CC000000"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginBottom="0dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/share_text"
                    android:gravity="center"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/share_title"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"

                    />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/facebook_button"
                        android:background="@android:color/transparent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/like"
                        android:layout_width="50dp"
                        android:layout_height="50dp" />

                    <ImageButton
                        android:id="@+id/twitter_button"
                        android:background="@android:color/transparent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/tweet"
                        android:layout_width="50dp"
                        android:layout_height="50dp" />

                    <ImageButton
                        android:id="@+id/mail_button"
                        android:background="@android:color/transparent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/mail"
                        android:layout_width="50dp"
                        android:layout_height="50dp" />

                    <ImageButton
                        android:id="@+id/clipboard_button"
                        android:background="@android:color/transparent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/link"
                        android:layout_width="50dp"
                        android:layout_height="50dp" />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <View
            android:background="#D46419"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="7dp" />

    </RelativeLayout>
</RelativeLayout>