<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#CC000000"
    android:baselineAligned="false">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="COMPARTIR"
        android:id="@+id/share_label"
        android:layout_alignParentBottom="false"
        android:layout_alignParentTop="false"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="false"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textIsSelectable="false"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="20dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/twitter_button_live"
            android:src="@drawable/tweet"
            android:scaleType="centerCrop"
            android:background="@android:color/transparent"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/facebook_button_live"
            android:layout_margin="6dp" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/clipboard_button_live"
            android:src="@drawable/link"
            android:scaleType="centerCrop"
            android:background="@android:color/transparent"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/mail_button_live"
            android:layout_margin="6dp" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/facebook_button_live"
            android:src="@drawable/like"
            android:scaleType="centerCrop"
            android:background="@android:color/transparent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="6dp" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/mail_button_live"
            android:src="@drawable/mail"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/twitter_button_live"
            android:layout_margin="6dp" />
    </RelativeLayout>
    <View
        android:background="#D46419"
        android:layout_alignParentBottom="true"
        android:layout_width="fill_parent"
        android:layout_height="9dp" />

</LinearLayout>