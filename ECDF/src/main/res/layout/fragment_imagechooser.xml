<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="@android:color/transparent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/image_container"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:layout_width="700dp"
            android:layout_height="126dp">

            <ImageView
                android:id="@+id/main_image_left"
                android:scaleType="centerCrop"
                android:background="@drawable/placeholder_envivo"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="match_parent" />
            <ImageView
                android:id="@+id/main_image_right"
                android:scaleType="centerCrop"
                android:background="@drawable/placeholder_envivo"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="match_parent" />

        </LinearLayout>

        <TextView
            android:id="@+id/vs_label"
            android:layout_centerHorizontal="true"
            android:layout_alignTop="@+id/split_image_container"
            android:layout_marginTop="80dp"
            android:background="@drawable/livecell_vs_label"
            android:layout_width="56dp"
            android:layout_height="31dp"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:text="@string/livecell_vs_label"
            />

        <TextView
            android:layout_below="@+id/image_container"
            android:layout_marginTop="40dp"
            android:layout_width="350dp"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:layout_height="wrap_content"
            android:text="@string/imagepicker_title"/>

    </RelativeLayout>

</RelativeLayout>